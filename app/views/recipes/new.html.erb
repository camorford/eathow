<%= form_for(@recipe, html: {multipart:true}) do |f| %>
<%= render 'recipe_error_messages' %>

	<div class="field">
	  <%= f.label :name %>
	  <%= f.text_field :name %>
	</div>

	<div class="field">
	  <%= f.label :directions %>
	  <%= f.text_field :directions %>
	</div>

	<div class="field">
	  <%= f.label :calories %>
	  <%= f.text_field :calories %>
	</div>

	<div class="field">
	  <%= f.label :carbs %>
	  <%= f.text_field :carbs %>%
	</div>

	<div class="field">
	  <%= f.label :protein %>
	  <%= f.text_field :protein %>%
	</div>

	<div class="field">
	  <%= f.label :fat %>
	  <%= f.text_field :fat %>%
	</div>

	<br><br>
	<h3>Add Ingredients</h3>
	<div id="ingredients">
	<%= f.fields_for :ingredients do |ingredient| %>
		<%= render 'ingredients/ingredient_fields', :f => ingredient %>
	<% end %>
	<%= link_to_add_association 'add ingredient',f, :ingredients, partial: "ingredients/ingredient_fields" %>
	</div>

	<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
	<%= f.file_field :nutrition_picture, accept: 'image/jpeg,image/gif,image/png' %>
	
 <%= f.submit %>

<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>