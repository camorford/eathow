<%= @recipe_favorites %>
<ul>
    <li>
      Name: <%= link_to @recipe.name %><br>
      Calories: <%= @recipe.dailycalories(current_user.calories) %><br>
      Protein: <%= @recipe.protein%><br>
      Carbs: <%= @recipe.carbs%><br>
      Fats: <%= @recipe.fat%>
    </li>

</ul>


<h3>Ingredients:</h3>
<ul>
<% @recipe.ingredients.each do |ingredient| %>

<li><%= ingredient[:name] %></li>

<% end %>
</ul>


<h3>Directions</h3>
<%= @recipe.directions %>


<br><br>

<%= link_to "Back to recipes", recipes_path %><br>


<% if current_user.favorited?(@recipe) %>
<%= render 'add_favorite', recipe: @recipe %>
<% else %>
<%= link_to 'Remove from favorites', favorite_path(@recipe), method: :delete %>
<% end %>