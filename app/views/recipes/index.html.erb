<%# provide(:title, 'All recipes') %>
<h1>All recipes</h1>

<ul>
  <% @recipes.each do |recipe| %>
  <li>
    Title: <%= link_to recipe.name, recipe %><br>
    </li>
  <% end %>
</ul>

<% if @favorite.any? %>

	<h1>Favorited Recipes</h1>

	<ul> 
	   <% @favorite.each do |favorite| %>
	    <li>
	      <%= link_to favorite.recipe.name, recipe_path(favorite.recipe) %>
	    </li>
	 <% end %>

 <% end %>
</ul>
